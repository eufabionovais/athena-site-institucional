---
import "../styles/global.css";
import AppHeader from '../components/AppHeader.astro';
import AppHeaderConteudoLegal from "../components/AppHeaderConteudoLegal.astro"
import AppFooter from '../components/AppFooter.astro';
import {baseURL} from "../config.ts"
const {conteudoLegal} = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/x-icon" href=`${baseURL}/favicon.ico` />
		<meta name="generator" content={Astro.generator} />
		<title>Janus Educare</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Manrope:wght@200..800&family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

	</head>
	<body>
		{
			!conteudoLegal ?
			<AppHeader /> :

			<AppHeaderConteudoLegal />
		}
		<div id="smooth-wrapper" class="general-wrapper">
			<div id="smooth-content">
				<slot />
				<AppFooter />
			</div>
		</div>

		<script is:inline src=`${baseURL}/vendors/gsap/gsap.min.js`></script>
		<script is:inline src=`${baseURL}/vendors/gsap/Observer.min.js`></script>
		<script is:inline src=`${baseURL}/vendors/gsap/ScrollTrigger.min.js`></script>
		<script is:inline src=`${baseURL}/vendors/gsap/ScrollToPlugin.min.js`></script>
		<script is:inline src=`${baseURL}/vendors/gsap/ScrollSmoother.min.js`></script>
		<script is:inline src="https://unpkg.com/@popperjs/core@2"></script>
		<script is:inline src="https://unpkg.com/tippy.js@6"></script>
		<!-- <script is:inline src="https://cdn.jsdelivr.net/npm/@floating-ui/core@1.7.1"></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/@floating-ui/dom@1.7.1"></script>		 -->
		<script is:inline src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
		<script is:inline src=`${baseURL}/vendors/jquery-validate/jquery.validate.min.js`></script>
		<script is:inline src=`${baseURL}/vendors/jquery-mask/jquery.mask.min.js`></script>
		<script is:inline src=`${baseURL}/js/application.js`></script>
		<script is:inline src=`${baseURL}/js/form-validation.js`></script>



	</body>
</html>


